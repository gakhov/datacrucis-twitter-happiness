{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "refresh_interval": "15s"
    },
    "mappings": {
        "short": {
            "date_detection" : false,
            "_timestamp" : {
                "enabled" : true,
                "path" : "timestamp",
                "format" : "basic_date_time"
            },
            "properties": {
                "VeryPositive": {
                    "type": "integer"
                },
                "Positive": {
                    "type": "integer"
                },
                "Neutral": {
                    "type": "integer"
                },
                "Negative": {
                    "type": "integer"
                },
                "VeryNegative": {
                    "type": "integer"
                },
                "timestamp": {
                    "format": "basic_date_time",
                    "type": "date"
                }
            }
        },
        "long": {
            "date_detection" : false,
            "_timestamp" : {
                "enabled" : true,
                "path" : "timestamp",
                "format" : "basic_date_time"
            },
            "properties": {
                "VeryPositive": {
                    "type": "integer"
                },
                "Positive": {
                    "type": "integer"
                },
                "Neutral": {
                    "type": "integer"
                },
                "Negative": {
                    "type": "integer"
                },
                "VeryNegative": {
                    "type": "integer"
                },
                "timestamp": {
                    "format": "basic_date_time",
                    "type": "date"
                }
            }
        }
    }
}
